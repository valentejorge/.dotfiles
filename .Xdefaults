! -----------------------------------------------------------------------------
URxvt.font: xft:Hack Nerd Font Mono:size=12.14
! -----------------------------------------------------------------------------

##############
# Xft settings
##############

Xft.dpi:                    128
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight
Xft.autohint:               true

#################################
# Color settings (Gruvbox)

*background: #1c1c1c
*foreground: #ebdbb2
*cursorColor: #d5c4a1
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1                                          


!! black dark/light
*color0: #282828
*color8: #928374
!! red dark/light
*color1: #cc241d
*color9: #fb4934

!! green dark/light
*color2: #98971a
*color10: #b8bb26

!! yellow dark/light
*color3: #d79921
*color11: #fabd2f

!! blue dark/light
*color4: #458588
*color12: #83a598

!! magenta dark/light
*color5: #b16286
*color13: #d3869b

!! cyan dark/light
*color6: #689d6a
*color14: #8ec07c

!! white dark/light
*color7: #a89984
*color15: #ebdbb2

# Color settings (Gruvbox)
#################################

################
# URXVT settings

# History lines
URxvt*saveLines: 12000

# scrollbar - true (default) or false
URxvt*scrollBar: false

# autoexplicate
#URxvt.cursorBlink: true

# sync copy
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

# deactivate the keycap picture insert
URxvt.iso14755: false
URxvt.iso14755_52: false

# deactivate blinking cursor
URxvt.cursorBlink: false

#size of pane
URxvt.geometry: 100x26
